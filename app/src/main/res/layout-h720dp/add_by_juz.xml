<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dz.salafi_harach.firstapp.Activity_add_quran"
    android:background="@drawable/nice_backround">

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:id="@+id/juz_gridView"
        android:saveEnabled="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hifd_btn"
        android:layout_marginTop="5dp"
        android:text="حــفـــظ"
        android:gravity="center"
        android:layout_below="@id/juz_gridView"
        android:layout_centerHorizontal="true"
        android:onClick="add_by_juz"
        android:background="@color/colorPrimary"
        android:textSize="14sp"/>


</RelativeLayout>






