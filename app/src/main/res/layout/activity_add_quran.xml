<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dz.salafi_harach.firstapp.Add_quran"
    android:background="@drawable/nice_backround">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quran_list_spinner"
        android:layout_marginTop="84dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_add_quran_activity"
        android:text="title_quran_add"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textSize="23sp"
        android:typeface="serif"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/small_text_for_radio_group"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="كيفية الإضافة"
        android:layout_below="@+id/quran_list_spinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:gravity="right"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/small_text_for_radio_group"
        android:layout_marginTop="7dp"
        android:layoutDirection="rtl"
        tools:targetApi="jelly_bean_mr1"
        android:forceHasOverlappingRendering="true"
        >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="كاملـــة"
                android:onClick="add_by_ayas_disabled"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.33"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بالأرباع"
                android:onClick="add_by_ayas_disabled"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.33"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بالآيات"
                android:onClick="add_by_ayas_enabled"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.33"/>
    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="0.99"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/radioGroup"
        android:layout_marginTop="30dp"
        android:id="@+id/add_by_ayat_layout"
        android:gravity="right">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:enabled="false"
            android:ems="10"
            android:id="@+id/fin_aya"
            android:layout_weight="0.3"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="إلى الآيـة: "
            android:id="@+id/textView2"
            android:layout_weight="0.19"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:enabled="false"
            android:ems="10"
            android:id="@+id/deb_aya"
            android:layout_weight="0.3"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="من الآيـة: "
            android:id="@+id/textView"
            android:layout_weight="0.19"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/add_by_ayat_layout"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="إلغاء"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="حفـظ"/>
    </LinearLayout>

</RelativeLayout>

